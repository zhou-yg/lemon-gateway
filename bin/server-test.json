{
    "apps": [{
        "name": "weike-lemon-gateway",
        "script": "bin/server.js",
        "instances": "1",
        "exec_mode": "cluster",
        "error_file": "/data/weike-pineapple/err.log",
        "out_file": "/data/weike-pineapple/out.log",
        "merge_logs": true,

        "env": {
          "ENV": "test",
          "NODE_ENV": "production",
          "PORT": 8880,
          "IP": "0.0.0.0"
        },

        "retain": 200,
        "workerInterval": 3600,
        "compress": true,
        "log_date_format": "YYYY-MM-DD HH:mm Z"
    }],
}
